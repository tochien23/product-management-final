doctype html 
html(lang="vi")    
    head 
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title #{pageTitle}
        
        // Modern CSS frameworks and utilities
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/@fortawesome/fontawesome-free@6.4.2/css/all.min.css")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/animate.css@4.1.1/animate.min.css")
        link(rel="stylesheet", href="/admin/css/style.css")
        
        // Custom fonts
        link(rel="preconnect", href="https://fonts.googleapis.com")
        link(rel="preconnect", href="https://fonts.gstatic.com", crossorigin)
        link(href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap", rel="stylesheet")
    
    body(class="admin-body")    
        if(role.permissions.length > 0)
            include ../partials/header.pug
            
            .admin-container
                include ../partials/sider.pug

                main.admin-main
                    .admin-content(class="p-4")
                        block main

            // Modern JavaScript dependencies
            script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js")
            script(src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js")
            script(src="https://cdn.jsdelivr.net/npm/sweetalert2@11.10.1/dist/sweetalert2.all.min.js")
            
            // TinyMCE 
            script(src="/tinymce/tinymce.min.js") 
            script(src="/admin/js/tinymce-config.js") 
            //-End TinyMCE 

            script(src="/admin/js/script.js") 
        else 
            .container.py-5
                .row.justify-content-center
                    .col-md-6.text-center
                        .alert.alert-danger.shadow-sm
                            i.fas.fa-exclamation-triangle.me-2
                            h3.mb-0 Bạn không có quyền truy cập
