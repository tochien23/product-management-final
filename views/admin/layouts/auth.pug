doctype html 
html(lang="vi")
    head 
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title #{pageTitle}

        // Modern CSS frameworks and utilities
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/@fortawesome/fontawesome-free@6.4.2/css/all.min.css")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/animate.css@4.1.1/animate.min.css")
        link(rel="stylesheet", href="/admin/css/style.css")

        // Custom fonts
        link(rel="preconnect", href="https://fonts.googleapis.com")
        link(rel="preconnect", href="https://fonts.gstatic.com", crossorigin)
        link(href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap", rel="stylesheet")

    body(class="admin-auth-body")
        .admin-auth-container(class="container-fluid min-vh-100 d-flex align-items-center justify-content-center")
            .admin-auth-content(class="w-100 max-w-md p-4")
                block main

        // Modern JavaScript dependencies
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js")
        script(src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js")
        script(src="https://cdn.jsdelivr.net/npm/sweetalert2@11.10.1/dist/sweetalert2.all.min.js")
        script(src="/admin/js/script.js") 