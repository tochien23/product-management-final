extend ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    if(role.permissions.includes("accounts_edit"))
        +alert-error(5000)
        +alert-success(5000)

        .account-edit-container
            // Header Section
            .page-header
                .header-content
                    .header-info
                        .breadcrumb-nav.mb-2
                            a.breadcrumb-link(href=`${prefixAdmin}/accounts`)
                                i.fas.fa-arrow-left.me-2
                                span Quay lại danh sách
                            .breadcrumb-separator /
                            span.breadcrumb-current Chỉnh sửa tài khoản
                        
                        .page-title-group
                            h1.page-title
                                i.fas.fa-user-edit.me-3
                                span Chỉnh sửa tài khoản
                            if(data)
                                .account-badge.mt-2
                                    i.fas.fa-user.me-1
                                    span #{data.fullName}

                    .header-actions
                        if(data)
                            a.btn-info(href=`${prefixAdmin}/accounts/detail/${data.id}`)
                                i.fas.fa-eye.me-2
                                span Xem chi tiết

            // Form Container
            .form-container
                if(roles)
                    form#form-edit-account(
                        action=`${prefixAdmin}/accounts/edit/${data.id}?_method=PATCH`
                        method="POST"
                        enctype="multipart/form-data"
                    )
                        .form-sections
                            // Basic Information Section
                            .form-section
                                .section-header
                                    h3.section-title
                                        i.fas.fa-info-circle
                                        span Thông tin cơ bản
                                
                                .section-content
                                    .form-row
                                        .form-group.col-6
                                            label.form-label(for="fullName") Họ và tên *
                                            input.form-input(
                                                type="text"
                                                id="fullName"
                                                name="fullName"
                                                placeholder="Nhập họ và tên..."
                                                value=data.fullName
                                                required 
                                            )
                                        
                                        .form-group.col-6
                                            label.form-label(for="email") Email *
                                            input.form-input(
                                                type="email"
                                                id="email"
                                                name="email"
                                                placeholder="Nhập địa chỉ email..."
                                                value=data.email
                                                required
                                            )
                                    
                                    .form-row
                                        .form-group.col-6
                                            label.form-label(for="password") Mật khẩu mới
                                            input.form-input(
                                                type="password"
                                                id="password"
                                                name="password"
                                                placeholder="Nhập mật khẩu mới (để trống nếu không đổi)..."
                                            )
                                        
                                        .form-group.col-6
                                            label.form-label(for="phone") Số điện thoại
                                            input.form-input(
                                                type="tel"
                                                id="phone"
                                                name="phone"
                                                placeholder="Nhập số điện thoại..."
                                                value=data.phone
                                            )

                            // Avatar Section
                            .form-section
                                .section-header
                                    h3.section-title
                                        i.fas.fa-user-circle
                                        span Ảnh đại diện
                                
                                .section-content
                                    .form-row
                                        .form-group.col-12
                                            .upload-container(upload-image)
                                                .current-image(style=data.avatar ? "display: block;" : "display: none;")
                                                    .image-label Ảnh hiện tại:
                                                    .current-image-wrapper
                                                        img.current-thumbnail(src=data.avatar alt=data.fullName)
                                                        .change-image-btn
                                                            i.fas.fa-camera
                                                            span Thay đổi ảnh
                                                
                                                .upload-area(style=data.avatar ? "display: none;" : "display: block;")
                                                    input.upload-input(
                                                        type="file"
                                                        id="avatar"
                                                        name="avatar"
                                                        accept="image/*"
                                                        upload-image-input
                                                    )
                                                    .upload-placeholder
                                                        i.fas.fa-cloud-upload-alt
                                                        p Kéo thả ảnh vào đây hoặc 
                                                            span.upload-link click để chọn
                                                        small Hỗ trợ: JPG, PNG, GIF (tối đa 5MB)
                                                    
                                                    .image-preview-container
                                                        img.image-preview(
                                                            src=data.avatar
                                                            upload-image-preview
                                                            style=data.avatar ? "display: block;" : "display: none;"
                                                        )
                                                        .remove-image(style=data.avatar ? "display: flex;" : "display: none;")
                                                            i.fas.fa-times

                            // Role & Status Section
                            .form-section
                                .section-header
                                    h3.section-title
                                        i.fas.fa-cog
                                        span Phân quyền & Trạng thái
                                
                                .section-content
                                    .form-row
                                        .form-group.col-6
                                            label.form-label(for="role_id") Nhóm quyền *
                                            select.form-select(
                                                name="role_id"
                                                id="role_id"
                                                required
                                            )
                                                option(value="" disabled) -- Chọn nhóm quyền --
                                                each item in roles
                                                    option(
                                                        value=item.id
                                                        selected=(item.id == data.role_id ? true : false)
                                                    ) #{item.title} 
                                        
                                        .form-group.col-6
                                            label.form-label Trạng thái tài khoản
                                            .radio-group
                                                .radio-item
                                                    input.radio-input(
                                                        type="radio"
                                                        id="statusActive"
                                                        name="status"
                                                        value="active"
                                                        checked=(data.status == "active" ? true : false)
                                                    )
                                                    label.radio-label(for="statusActive") Hoạt động
                                                .radio-item
                                                    input.radio-input(
                                                        type="radio"
                                                        id="statusInActive"
                                                        name="status"
                                                        value="inactive"
                                                        checked=(data.status == "inactive" ? true : false)
                                                    )
                                                    label.radio-label(for="statusInActive") Tạm khóa

                        // Form Actions
                        .form-actions
                            button.btn-primary(type="submit")
                                i.fas.fa-save.me-2
                                span Cập nhật tài khoản
                            a.btn-secondary(href=`${prefixAdmin}/accounts`)
                                i.fas.fa-times.me-2
                                span Hủy bỏ
                
                else 
                    .empty-state
                        .empty-icon
                            i.fas.fa-exclamation-triangle
                        h3.empty-title Chưa có nhóm quyền
                        p.empty-description Vui lòng tạo nhóm quyền trước khi cập nhật tài khoản
                        .empty-actions
                            a.btn-primary(href=`${prefixAdmin}/roles/create`)
                                i.fas.fa-plus.me-2
                                span Tạo nhóm quyền

        script(src="/admin/js/product.js")

        style.
            .account-edit-container {
                padding: 20px;
                max-width: 1200px;
                margin: 0 auto;
            }

            .page-header {
                margin-bottom: 30px;
                padding-bottom: 20px;
                border-bottom: 1px solid #e9ecef;
            }

            .header-content {
                display: flex;
                justify-content: space-between;
                align-items: flex-start;
                gap: 20px;
            }

            .breadcrumb-nav {
                display: flex;
                align-items: center;
                gap: 10px;
                font-size: 14px;
            }

            .breadcrumb-link {
                color: #6c757d;
                text-decoration: none;
                display: flex;
                align-items: center;
                transition: color 0.3s ease;
            }

            .breadcrumb-link:hover {
                color: #3498db;
                text-decoration: none;
            }

            .breadcrumb-separator {
                color: #adb5bd;
            }

            .breadcrumb-current {
                color: #495057;
                font-weight: 500;
            }

            .page-title {
                font-size: 32px;
                font-weight: 700;
                color: #2c3e50;
                margin: 0;
                display: flex;
                align-items: center;
                line-height: 1.2;
            }

            .page-title i {
                color: #3498db;
                font-size: 28px;
            }

            .account-badge {
                background: linear-gradient(135deg, #3498db 0%, #2980b9 100%);
                color: white;
                padding: 6px 12px;
                border-radius: 20px;
                font-size: 12px;
                font-weight: 500;
                display: inline-flex;
                align-items: center;
            }

            .header-actions {
                display: flex;
                gap: 12px;
                flex-shrink: 0;
            }

            .btn-primary, .btn-secondary, .btn-info {
                padding: 12px 24px;
                border-radius: 8px;
                text-decoration: none;
                display: inline-flex;
                align-items: center;
                font-weight: 500;
                border: none;
                cursor: pointer;
                transition: all 0.3s ease;
                font-size: 14px;
            }

            .btn-primary {
                background: linear-gradient(135deg, #3498db 0%, #2980b9 100%);
                color: white;
                box-shadow: 0 4px 12px rgba(52, 152, 219, 0.4);
            }

            .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 20px rgba(52, 152, 219, 0.6);
                text-decoration: none;
                color: white;
            }

            .btn-secondary {
                background: #6c757d;
                color: white;
            }

            .btn-secondary:hover {
                background: #5a6268;
                text-decoration: none;
                color: white;
            }

            .btn-info {
                background: #17a2b8;
                color: white;
            }

            .btn-info:hover {
                background: #138496;
                text-decoration: none;
                color: white;
            }

            .form-container {
                background: white;
                border-radius: 12px;
                box-shadow: 0 4px 6px rgba(0,0,0,0.1);
                overflow: hidden;
            }

            .form-sections {
                padding: 30px;
            }

            .form-section {
                margin-bottom: 40px;
            }

            .form-section:last-child {
                margin-bottom: 0;
            }

            .section-header {
                margin-bottom: 20px;
                padding-bottom: 12px;
                border-bottom: 2px solid #f8f9fa;
            }

            .section-title {
                font-size: 18px;
                font-weight: 600;
                color: #2c3e50;
                margin: 0;
                display: flex;
                align-items: center;
                gap: 10px;
            }

            .section-title i {
                color: #3498db;
                width: 20px;
            }

            .section-content {
                padding-top: 10px;
            }

            .form-row {
                display: flex;
                flex-wrap: wrap;
                margin: 0 -10px;
            }

            .form-group {
                padding: 0 10px;
                margin-bottom: 20px;
            }

            .col-12 { flex: 0 0 100%; }
            .col-6 { flex: 0 0 50%; }

            .form-label {
                display: block;
                margin-bottom: 8px;
                font-weight: 500;
                color: #495057;
                font-size: 14px;
            }

            .form-input, .form-select {
                width: 100%;
                padding: 12px 16px;
                border: 2px solid #e9ecef;
                border-radius: 6px;
                font-size: 14px;
                transition: all 0.3s ease;
                background: white;
            }

            .form-input:focus, .form-select:focus {
                outline: none;
                border-color: #3498db;
                box-shadow: 0 0 0 3px rgba(52, 152, 219, 0.1);
            }

            .radio-group {
                display: flex;
                gap: 20px;
                margin-top: 8px;
            }

            .radio-item {
                display: flex;
                align-items: center;
                gap: 8px;
            }

            .radio-input {
                width: 18px;
                height: 18px;
                accent-color: #3498db;
            }

            .radio-label {
                font-size: 14px;
                color: #495057;
                cursor: pointer;
                margin: 0;
            }

            .upload-container {
                position: relative;
            }

            .current-image {
                margin-bottom: 20px;
            }

            .image-label {
                font-size: 14px;
                font-weight: 500;
                color: #495057;
                margin-bottom: 10px;
            }

            .current-image-wrapper {
                position: relative;
                display: inline-block;
            }

            .current-thumbnail {
                max-width: 120px;
                max-height: 120px;
                border-radius: 50%;
                box-shadow: 0 2px 8px rgba(0,0,0,0.1);
                border: 3px solid #3498db;
                object-fit: cover;
            }

            .change-image-btn {
                position: absolute;
                bottom: 8px;
                right: 8px;
                background: rgba(0,0,0,0.7);
                color: white;
                padding: 8px 12px;
                border-radius: 4px;
                font-size: 12px;
                display: flex;
                align-items: center;
                gap: 5px;
                cursor: pointer;
                transition: all 0.3s ease;
            }

            .change-image-btn:hover {
                background: rgba(0,0,0,0.9);
            }

            .upload-area {
                border: 2px dashed #ddd;
                border-radius: 8px;
                padding: 40px 20px;
                text-align: center;
                background: #fafafa;
                transition: all 0.3s ease;
                cursor: pointer;
            }

            .upload-area:hover {
                border-color: #3498db;
                background: #f8f9fa;
            }

            .upload-input {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                opacity: 0;
                cursor: pointer;
            }

            .upload-placeholder i {
                font-size: 48px;
                color: #bdc3c7;
                margin-bottom: 16px;
                display: block;
            }

            .upload-placeholder p {
                font-size: 16px;
                color: #7f8c8d;
                margin: 0 0 8px 0;
            }

            .upload-link {
                color: #3498db;
                font-weight: 500;
                cursor: pointer;
            }

            .upload-placeholder small {
                color: #95a5a6;
                font-size: 12px;
            }

            .image-preview-container {
                position: relative;
                margin-top: 20px;
            }

            .image-preview {
                max-width: 120px;
                max-height: 120px;
                border-radius: 50%;
                box-shadow: 0 2px 8px rgba(0,0,0,0.1);
                border: 3px solid #3498db;
                object-fit: cover;
            }

            .remove-image {
                position: absolute;
                top: -8px;
                right: -8px;
                width: 24px;
                height: 24px;
                background: #e74c3c;
                color: white;
                border-radius: 50%;
                display: flex;
                align-items: center;
                justify-content: center;
                cursor: pointer;
                font-size: 12px;
                transition: all 0.3s ease;
            }

            .remove-image:hover {
                background: #c0392b;
                transform: scale(1.1);
            }

            .form-actions {
                padding: 20px 30px;
                background: #f8f9fa;
                border-top: 1px solid #e9ecef;
                display: flex;
                gap: 15px;
                justify-content: flex-end;
            }

            .empty-state {
                padding: 60px 30px;
                text-align: center;
                color: #6c757d;
            }

            .empty-icon {
                margin-bottom: 20px;
            }

            .empty-icon i {
                font-size: 64px;
                color: #3498db;
                opacity: 0.5;
            }

            .empty-title {
                font-size: 24px;
                font-weight: 600;
                color: #2c3e50;
                margin-bottom: 12px;
            }

            .empty-description {
                font-size: 16px;
                margin-bottom: 30px;
                line-height: 1.5;
            }

            .empty-actions {
                display: flex;
                justify-content: center;
                gap: 12px;
            }

            @media (max-width: 768px) {
                .account-edit-container {
                    padding: 15px;
                }
                
                .header-content {
                    flex-direction: column;
                    gap: 15px;
                }
                
                .header-actions {
                    align-self: stretch;
                    justify-content: stretch;
                }

                .header-actions .btn-info {
                    flex: 1;
                    justify-content: center;
                }
                
                .page-title {
                    font-size: 24px;
                }
                
                .form-sections {
                    padding: 20px;
                }
                
                .form-row {
                    margin: 0 -5px;
                }
                
                .form-group {
                    padding: 0 5px;
                }
                
                .col-6 {
                    flex: 0 0 100%;
                }
                
                .form-actions {
                    padding: 15px 20px;
                    flex-direction: column;
                }
                
                .radio-group {
                    flex-direction: column;
                    gap: 10px;
                }

                .empty-state {
                    padding: 40px 20px;
                }

                .empty-icon i {
                    font-size: 48px;
                }

                .empty-title {
                    font-size: 20px;
                }

                .empty-actions {
                    flex-direction: column;
                }

                .btn-primary, .btn-secondary, .btn-info {
                    justify-content: center;
                }
            }