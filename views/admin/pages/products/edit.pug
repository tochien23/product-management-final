extend ../../layouts/default.pug
include ../../mixins/alert.pug
include ../../mixins/select-tree.pug

block main 
    if(role.permissions.includes("products_edit"))
        +alert-error(5000)
        +alert-success(5000)

        .product-edit-container
            // Header Section
            .page-header
                .header-content
                    h1.page-title
                        i.fas.fa-edit
                        span Chỉnh sửa sản phẩm
                        .product-info
                            small.product-name #{product.title}
                    .header-actions
                        a.btn-secondary(href=`${prefixAdmin}/products`)
                            i.fas.fa-arrow-left
                            span Quay lại danh sách
                        a.btn-info(href=`${prefixAdmin}/products/detail/${product.id}`)
                            i.fas.fa-eye
                            span Xem chi tiết

            // Form Container
            .form-container
                form#form-edit-product(
                    action=`${prefixAdmin}/products/edit/${product.id}?_method=PATCH`
                    method="POST"
                    enctype="multipart/form-data"
                )
                    .form-sections
                        // Basic Information Section
                        .form-section
                            .section-header
                                h3.section-title
                                    i.fas.fa-info-circle
                                    span Thông tin cơ bản
                            
                            .section-content
                                .form-row
                                    .form-group.col-12
                                        label.form-label(for="title") Tên sản phẩm *
                                        input.form-input(
                                            type="text"
                                            id="title"
                                            name="title"
                                            placeholder="Nhập tên sản phẩm..."
                                            value=product.title
                                            required
                                        )
                                
                                .form-row
                                    .form-group.col-6
                                        label.form-label(for="product_category_id") Danh mục sản phẩm
                                        select.form-select(
                                            name="product_category_id"
                                            id="product_category_id"
                                        )
                                            option(value="") -- Chọn danh mục --
                                            if(category)
                                                +select-tree(category, 1, product.product_category_id)
                                    
                                    .form-group.col-6
                                        label.form-label Sản phẩm nổi bật
                                        .radio-group
                                            .radio-item
                                                input.radio-input(
                                                    type="radio"
                                                    id="featured1"
                                                    name="featured"
                                                    value="1"
                                                    checked=(product.featured == "1" ? true : false)
                                                )
                                                label.radio-label(for="featured1") Có
                                            .radio-item
                                                input.radio-input(
                                                    type="radio"
                                                    id="featured0"
                                                    name="featured"
                                                    value="0"
                                                    checked=(product.featured == "0" ? true : false)
                                                )
                                                label.radio-label(for="featured0") Không

                                .form-row
                                    .form-group.col-12
                                        label.form-label(for="desc") Mô tả sản phẩm
                                        textarea.form-textarea.textarea-mce(
                                            id="desc"
                                            name="description"
                                            rows="4"
                                            placeholder="Nhập mô tả chi tiết về sản phẩm..."
                                        ) #{product.description}

                        // Pricing & Inventory Section
                        .form-section
                            .section-header
                                h3.section-title
                                    i.fas.fa-dollar-sign
                                    span Giá & Kho hàng
                            
                            .section-content
                                .form-row
                                    .form-group.col-4
                                        label.form-label(for="price") Giá bán ($) *
                                        input.form-input(
                                            type="number"
                                            id="price"
                                            name="price"
                                            value=product.price
                                            min="0"
                                            step="0.01"
                                            placeholder="0.00"
                                        )
                                    
                                    .form-group.col-4
                                        label.form-label(for="discount") Giảm giá (%)
                                        input.form-input(
                                            type="number"
                                            id="discount"
                                            name="discountPercentage"
                                            value=product.discountPercentage
                                            min="0"
                                            max="100"
                                            placeholder="0"
                                        )
                                    
                                    .form-group.col-4
                                        label.form-label(for="stock") Số lượng tồn kho
                                        input.form-input(
                                            type="number"
                                            id="stock"
                                            name="stock"
                                            value=product.stock
                                            min="0"
                                            placeholder="0"
                                        )

                        // Media Section
                        .form-section
                            .section-header
                                h3.section-title
                                    i.fas.fa-image
                                    span Hình ảnh sản phẩm
                            
                            .section-content
                                .form-row
                                    .form-group.col-12
                                        .upload-container(upload-image)
                                            .current-image(style=product.thumbnail ? "display: block;" : "display: none;")
                                                .image-label Ảnh hiện tại:
                                                .current-image-wrapper
                                                    img.current-thumbnail(src=product.thumbnail alt=product.title)
                                                    .change-image-btn
                                                        i.fas.fa-camera
                                                        span Thay đổi ảnh
                                            
                                            .upload-area(style=product.thumbnail ? "display: none;" : "display: block;")
                                                input.upload-input(
                                                    type="file"
                                                    id="thumbnail"
                                                    name="thumbnail"
                                                    accept="image/*"
                                                    upload-image-input
                                                )
                                                .upload-placeholder
                                                    i.fas.fa-cloud-upload-alt
                                                    p Kéo thả ảnh vào đây hoặc 
                                                        span.upload-link click để chọn
                                                    small Hỗ trợ: JPG, PNG, GIF (tối đa 5MB)
                                                
                                                .image-preview-container
                                                    img.image-preview(
                                                        src=product.thumbnail
                                                        upload-image-preview
                                                        style=product.thumbnail ? "display: block;" : "display: none;"
                                                    )
                                                    .remove-image(style=product.thumbnail ? "display: flex;" : "display: none;")
                                                        i.fas.fa-times

                        // Settings Section
                        .form-section
                            .section-header
                                h3.section-title
                                    i.fas.fa-cog
                                    span Cài đặt
                            
                            .section-content
                                .form-row
                                    .form-group.col-6
                                        label.form-label(for="position") Vị trí hiển thị
                                        input.form-input(
                                            type="number"
                                            id="position"
                                            name="position"
                                            placeholder="Tự động tăng"
                                            value=product.position
                                            min="1"
                                        )
                                    
                                    .form-group.col-6
                                        label.form-label Trạng thái
                                        .radio-group
                                            .radio-item
                                                input.radio-input(
                                                    type="radio"
                                                    id="statusActive"
                                                    name="status"
                                                    value="active"
                                                    checked=(product.status == "active" ? true : false)
                                                )
                                                label.radio-label(for="statusActive") Hoạt động
                                            .radio-item
                                                input.radio-input(
                                                    type="radio"
                                                    id="statusInActive"
                                                    name="status"
                                                    value="inactive"
                                                    checked=(product.status == "inactive" ? true : false)
                                                )
                                                label.radio-label(for="statusInActive") Tạm dừng

                    // Form Actions
                    .form-actions
                        button.btn-primary(type="submit")
                            i.fas.fa-save
                            span Cập nhật sản phẩm
                        a.btn-secondary(href=`${prefixAdmin}/products`)
                            i.fas.fa-times
                            span Hủy bỏ

        script(src="/admin/js/product.js")

        style.
            .product-edit-container {
                padding: 20px;
                max-width: 1200px;
                margin: 0 auto;
            }

            .page-header {
                margin-bottom: 30px;
                padding-bottom: 20px;
                border-bottom: 1px solid #e9ecef;
            }

            .header-content {
                display: flex;
                justify-content: space-between;
                align-items: flex-start;
            }

            .page-title {
                font-size: 28px;
                font-weight: 600;
                color: #2c3e50;
                margin: 0;
                display: flex;
                align-items: center;
                gap: 12px;
                flex-direction: column;
                align-items: flex-start;
            }

            .page-title i {
                color: #f39c12;
            }

            .product-info {
                margin-top: 8px;
            }

            .product-name {
                background: #f8f9fa;
                padding: 4px 8px;
                border-radius: 4px;
                color: #6c757d;
                font-size: 14px;
                border-left: 3px solid #f39c12;
            }

            .header-actions {
                display: flex;
                gap: 10px;
            }

            .btn-primary, .btn-secondary, .btn-info {
                padding: 12px 24px;
                border-radius: 6px;
                text-decoration: none;
                display: inline-flex;
                align-items: center;
                gap: 8px;
                font-weight: 500;
                border: none;
                cursor: pointer;
                transition: all 0.3s ease;
            }

            .btn-primary {
                background: #27ae60;
                color: white;
            }

            .btn-primary:hover {
                background: #229954;
            }

            .btn-secondary {
                background: #95a5a6;
                color: white;
            }

            .btn-secondary:hover {
                background: #7f8c8d;
                text-decoration: none;
                color: white;
            }

            .btn-info {
                background: #3498db;
                color: white;
            }

            .btn-info:hover {
                background: #2980b9;
                text-decoration: none;
                color: white;
            }

            .form-container {
                background: white;
                border-radius: 12px;
                box-shadow: 0 4px 6px rgba(0,0,0,0.1);
                overflow: hidden;
            }

            .form-sections {
                padding: 30px;
            }

            .form-section {
                margin-bottom: 40px;
            }

            .form-section:last-child {
                margin-bottom: 0;
            }

            .section-header {
                margin-bottom: 20px;
                padding-bottom: 12px;
                border-bottom: 2px solid #f8f9fa;
            }

            .section-title {
                font-size: 18px;
                font-weight: 600;
                color: #2c3e50;
                margin: 0;
                display: flex;
                align-items: center;
                gap: 10px;
            }

            .section-title i {
                color: #f39c12;
                width: 20px;
            }

            .section-content {
                padding-top: 10px;
            }

            .form-row {
                display: flex;
                flex-wrap: wrap;
                margin: 0 -10px;
            }

            .form-group {
                padding: 0 10px;
                margin-bottom: 20px;
            }

            .col-12 { flex: 0 0 100%; }
            .col-6 { flex: 0 0 50%; }
            .col-4 { flex: 0 0 33.333%; }

            .form-label {
                display: block;
                margin-bottom: 8px;
                font-weight: 500;
                color: #495057;
                font-size: 14px;
            }

            .form-input, .form-select, .form-textarea {
                width: 100%;
                padding: 12px 16px;
                border: 2px solid #e9ecef;
                border-radius: 6px;
                font-size: 14px;
                transition: all 0.3s ease;
                background: white;
            }

            .form-input:focus, .form-select:focus, .form-textarea:focus {
                outline: none;
                border-color: #f39c12;
                box-shadow: 0 0 0 3px rgba(243, 156, 18, 0.1);
            }

            .form-textarea {
                resize: vertical;
                min-height: 100px;
            }

            .radio-group {
                display: flex;
                gap: 20px;
                margin-top: 8px;
            }

            .radio-item {
                display: flex;
                align-items: center;
                gap: 8px;
            }

            .radio-input {
                width: 18px;
                height: 18px;
                accent-color: #f39c12;
            }

            .radio-label {
                font-size: 14px;
                color: #495057;
                cursor: pointer;
                margin: 0;
            }

            .upload-container {
                position: relative;
            }

            .current-image {
                margin-bottom: 20px;
            }

            .image-label {
                font-size: 14px;
                font-weight: 500;
                color: #495057;
                margin-bottom: 10px;
            }

            .current-image-wrapper {
                position: relative;
                display: inline-block;
            }

            .current-thumbnail {
                max-width: 200px;
                max-height: 200px;
                border-radius: 8px;
                box-shadow: 0 2px 8px rgba(0,0,0,0.1);
                border: 2px solid #e9ecef;
            }

            .change-image-btn {
                position: absolute;
                bottom: 8px;
                right: 8px;
                background: rgba(0,0,0,0.7);
                color: white;
                padding: 8px 12px;
                border-radius: 4px;
                font-size: 12px;
                display: flex;
                align-items: center;
                gap: 5px;
                cursor: pointer;
                transition: all 0.3s ease;
            }

            .change-image-btn:hover {
                background: rgba(0,0,0,0.9);
            }

            .upload-area {
                border: 2px dashed #ddd;
                border-radius: 8px;
                padding: 40px 20px;
                text-align: center;
                background: #fafafa;
                transition: all 0.3s ease;
                cursor: pointer;
            }

            .upload-area:hover {
                border-color: #f39c12;
                background: #f8f9fa;
            }

            .upload-input {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                opacity: 0;
                cursor: pointer;
            }

            .upload-placeholder i {
                font-size: 48px;
                color: #bdc3c7;
                margin-bottom: 16px;
                display: block;
            }

            .upload-placeholder p {
                font-size: 16px;
                color: #7f8c8d;
                margin: 0 0 8px 0;
            }

            .upload-link {
                color: #f39c12;
                font-weight: 500;
                cursor: pointer;
            }

            .upload-placeholder small {
                color: #95a5a6;
                font-size: 12px;
            }

            .image-preview-container {
                position: relative;
                margin-top: 20px;
            }

            .image-preview {
                max-width: 200px;
                max-height: 200px;
                border-radius: 8px;
                box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            }

            .remove-image {
                position: absolute;
                top: -10px;
                right: -10px;
                width: 30px;
                height: 30px;
                background: #e74c3c;
                color: white;
                border-radius: 50%;
                display: flex;
                align-items: center;
                justify-content: center;
                cursor: pointer;
                font-size: 12px;
            }

            .form-actions {
                padding: 20px 30px;
                background: #f8f9fa;
                border-top: 1px solid #e9ecef;
                display: flex;
                gap: 15px;
                justify-content: flex-end;
            }

            @media (max-width: 768px) {
                .product-edit-container {
                    padding: 15px;
                }

                .header-content {
                    flex-direction: column;
                    gap: 15px;
                    align-items: stretch;
                }

                .page-title {
                    font-size: 24px;
                }

                .header-actions {
                    flex-direction: column;
                }

                .form-sections {
                    padding: 20px;
                }

                .form-row {
                    margin: 0 -5px;
                }

                .form-group {
                    padding: 0 5px;
                }

                .col-6, .col-4 {
                    flex: 0 0 100%;
                }

                .radio-group {
                    flex-direction: column;
                    gap: 10px;
                }

                .form-actions {
                    flex-direction: column;
                    padding: 15px 20px;
                }

                .btn-primary, .btn-secondary, .btn-info {
                    justify-content: center;
                }
            } 