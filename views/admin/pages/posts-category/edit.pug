extend ../../layouts/default.pug
include ../../mixins/alert.pug
include ../../mixins/select-tree.pug

block main 
    if(role.permissions.includes("posts-category_edit"))
        +alert-error(5000)
        +alert-success(5000)

        .post-category-edit-container
            // Header Section
            .page-header
                .header-content
                    .header-info
                        .breadcrumb-nav.mb-2
                            a.breadcrumb-link(href=`${prefixAdmin}/posts-category`)
                                i.fas.fa-arrow-left.me-2
                                span Quay lại danh sách
                            .breadcrumb-separator /
                            span.breadcrumb-current Chỉnh sửa danh mục bài viết
                        
                        .page-title-group
                    h1.page-title
                                i.fas.fa-folder-open.me-3
                        span Chỉnh sửa danh mục bài viết
                            .category-badge.mt-2
                                i.fas.fa-folder.me-1
                                span #{data.title}

                    .header-actions
                        a.btn-info(href=`${prefixAdmin}/posts-category/detail/${data.id}`)
                            i.fas.fa-eye.me-2
                            span Xem chi tiết

            // Form Container
            .form-container
                form#form-edit-post-category(
            action=`${prefixAdmin}/posts-category/edit/${data.id}?_method=PATCH`
            method="POST"
            enctype="multipart/form-data"
        ) 
                    .form-sections
                        // Basic Information Section
                        .form-section
                            .section-header
                                h3.section-title
                                    i.fas.fa-info-circle
                                    span Thông tin cơ bản
                            
                            .section-content
                                .form-row
                                    .form-group.col-12
                                        label.form-label(for="title") Tiêu đề danh mục *
                                        input.form-input(
                    type="text"
                    id="title"
                    name="title"
                                            placeholder="Nhập tiêu đề danh mục..."
                                            value=data.title
                    required 
                                        )
                                
                                .form-row
                                    .form-group.col-12
                                        label.form-label(for="parent_id") Danh mục cha
                                        select.form-select(
                    name="parent_id"
                    id="parent_id"
                )
                    option(value="") -- Chọn danh mục cha -- 
                    if(records)
                                                +select-tree(records, 1, data.parent_id)

                                .form-row
                                    .form-group.col-12
                                        label.form-label(for="desc") Mô tả danh mục
                                        textarea.form-textarea.textarea-mce(
                    id="desc"
                    name="description"
                    rows="5"
                                            placeholder="Nhập mô tả chi tiết về danh mục..."
                ) #{data.description}

                        // Settings Section
                        .form-section
                            .section-header
                                h3.section-title
                                    i.fas.fa-cog
                                    span Cài đặt
                            
                            .section-content
                                .form-row
                                    .form-group.col-6
                                        label.form-label(for="position") Vị trí hiển thị
                                        input.form-input(
                    type="number"
                    id="position"
                    name="position"
                    placeholder="Tự động tăng"
                                            value=data.position
                    min="1"
                                        )
                                    
                                    .form-group.col-6
                                        label.form-label Trạng thái
                                        .radio-group
                                            .radio-item
                                                input.radio-input(
                    type="radio"
                    id="statusActive"
                    name="status"
                    value="active"
                    checked=(data.status == "active" ? true : false)
                )
                                                label.radio-label(for="statusActive") Hoạt động
                                            .radio-item
                                                input.radio-input(
                    type="radio"
                    id="statusInActive"
                    name="status"
                    value="inactive"
                    checked=(data.status == "inactive" ? true : false)
                )
                                                label.radio-label(for="statusInActive") Tạm dừng

                    // Form Actions
                    .form-actions
                        button.btn-primary(type="submit")
                            i.fas.fa-save.me-2
                            span Cập nhật danh mục
                        a.btn-secondary(href=`${prefixAdmin}/posts-category`)
                            i.fas.fa-times.me-2
                            span Hủy bỏ

        script(src="/admin/js/product.js")

        style.
            .post-category-edit-container {
                padding: 20px;
                max-width: 1200px;
                margin: 0 auto;
            }

            .page-header {
                margin-bottom: 30px;
                padding-bottom: 20px;
                border-bottom: 1px solid #e9ecef;
            }

            .header-content {
                display: flex;
                justify-content: space-between;
                align-items: flex-start;
                gap: 20px;
            }

            .breadcrumb-nav {
                display: flex;
                align-items: center;
                gap: 10px;
                font-size: 14px;
            }

            .breadcrumb-link {
                color: #6c757d;
                text-decoration: none;
                display: flex;
                align-items: center;
                transition: color 0.3s ease;
            }

            .breadcrumb-link:hover {
                color: #9b59b6;
                text-decoration: none;
            }

            .breadcrumb-separator {
                color: #adb5bd;
            }

            .breadcrumb-current {
                color: #495057;
                font-weight: 500;
            }

            .page-title {
                font-size: 32px;
                font-weight: 700;
                color: #2c3e50;
                margin: 0;
                display: flex;
                align-items: center;
                line-height: 1.2;
            }

            .page-title i {
                color: #9b59b6;
                font-size: 28px;
            }

            .category-badge {
                background: linear-gradient(135deg, #9b59b6 0%, #8e44ad 100%);
                color: white;
                padding: 6px 12px;
                border-radius: 20px;
                font-size: 12px;
                font-weight: 500;
                display: inline-flex;
                align-items: center;
            }

            .header-actions {
                display: flex;
                gap: 12px;
                flex-shrink: 0;
            }

            .btn-primary, .btn-secondary, .btn-info {
                padding: 12px 24px;
                border-radius: 8px;
                text-decoration: none;
                display: inline-flex;
                align-items: center;
                font-weight: 500;
                border: none;
                cursor: pointer;
                transition: all 0.3s ease;
                font-size: 14px;
            }

            .btn-primary {
                background: linear-gradient(135deg, #9b59b6 0%, #8e44ad 100%);
                color: white;
                box-shadow: 0 4px 12px rgba(155, 89, 182, 0.4);
            }

            .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 20px rgba(155, 89, 182, 0.6);
                text-decoration: none;
                color: white;
            }

            .btn-secondary {
                background: #6c757d;
                color: white;
            }

            .btn-secondary:hover {
                background: #5a6268;
                text-decoration: none;
                color: white;
            }

            .btn-info {
                background: #17a2b8;
                color: white;
            }

            .btn-info:hover {
                background: #138496;
                text-decoration: none;
                color: white;
            }

            .form-container {
                background: white;
                border-radius: 12px;
                box-shadow: 0 4px 6px rgba(0,0,0,0.1);
                overflow: hidden;
            }

            .form-sections {
                padding: 30px;
            }

            .form-section {
                margin-bottom: 40px;
            }

            .form-section:last-child {
                margin-bottom: 0;
            }

            .section-header {
                margin-bottom: 20px;
                padding-bottom: 12px;
                border-bottom: 2px solid #f8f9fa;
            }

            .section-title {
                font-size: 18px;
                font-weight: 600;
                color: #2c3e50;
                margin: 0;
                display: flex;
                align-items: center;
                gap: 10px;
            }

            .section-title i {
                color: #9b59b6;
                width: 20px;
            }

            .section-content {
                padding-top: 10px;
            }

            .form-row {
                display: flex;
                flex-wrap: wrap;
                margin: 0 -10px;
            }

            .form-group {
                padding: 0 10px;
                margin-bottom: 20px;
            }

            .col-12 { flex: 0 0 100%; }
            .col-6 { flex: 0 0 50%; }

            .form-label {
                display: block;
                margin-bottom: 8px;
                font-weight: 500;
                color: #495057;
                font-size: 14px;
            }

            .form-input, .form-select, .form-textarea {
                width: 100%;
                padding: 12px 16px;
                border: 2px solid #e9ecef;
                border-radius: 6px;
                font-size: 14px;
                transition: all 0.3s ease;
                background: white;
            }

            .form-input:focus, .form-select:focus, .form-textarea:focus {
                outline: none;
                border-color: #9b59b6;
                box-shadow: 0 0 0 3px rgba(155, 89, 182, 0.1);
            }

            .form-textarea {
                resize: vertical;
                min-height: 120px;
            }

            .radio-group {
                display: flex;
                gap: 20px;
                margin-top: 8px;
            }

            .radio-item {
                display: flex;
                align-items: center;
                gap: 8px;
            }

            .radio-input {
                width: 18px;
                height: 18px;
                accent-color: #9b59b6;
            }

            .radio-label {
                font-size: 14px;
                color: #495057;
                cursor: pointer;
                margin: 0;
            }

            .form-actions {
                padding: 20px 30px;
                background: #f8f9fa;
                border-top: 1px solid #e9ecef;
                display: flex;
                gap: 15px;
                justify-content: flex-end;
            }

            @media (max-width: 768px) {
                .post-category-edit-container {
                    padding: 15px;
                }
                
                .header-content {
                    flex-direction: column;
                    gap: 15px;
                }
                
                .header-actions {
                    align-self: stretch;
                    justify-content: stretch;
                }

                .header-actions .btn-info {
                    flex: 1;
                    justify-content: center;
                }
                
                .page-title {
                    font-size: 24px;
                }
                
                .form-sections {
                    padding: 20px;
                }
                
                .form-row {
                    margin: 0 -5px;
                }
                
                .form-group {
                    padding: 0 5px;
                }
                
                .col-6 {
                    flex: 0 0 100%;
                }
                
                .form-actions {
                    padding: 15px 20px;
                    flex-direction: column;
                }
                
                .radio-group {
                    flex-direction: column;
                    gap: 10px;
                }

                .btn-primary, .btn-secondary, .btn-info {
                    justify-content: center;
                }
            }