extend ../../layouts/default.pug
include ../../mixins/filter-status.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug
include ../../mixins/form-change-multi.pug
include ../../mixins/alert.pug
include ../../mixins/sort.pug
include ../../mixins/moment.pug

block main
    if(role.permissions.includes("posts_view"))
        +alert-success(5000)
        
        h1 Quản lý bài viết

        .card-mb-3
            .card-header Bộ lọc và Tìm kiếm
            .card-body
            .row 
                .col-6
                    +filter-status(filterStatus)
                .col-6 
                    +search(keyword)
        .card-mb-3
            .card-header 
                .card-body
                    .row 
                        .col-4 
                            if(role.permissions.includes("posts_create"))
                                a(
                                    href=`${prefixAdmin}/posts/create`
                                    class="btn btn-outline-success"
                                ) + Thêm mới

        .card-mb-3
            .card-header Danh sách bài viết
                .card-body 

                    table(
                        class="table table-hover table-sm"
                        checkbox-multi
                    )
                        thead 
                            tr 
                                th  
                                    input(type="checkbox" name="checkall")
                                th STT 
                                th Tiêu đề
                                th Ảnh minh họa
                                th Nội dung bài viết
                                th Trạng thái 
                                th Người tạo 
                                th Hành động

                        tbody 
                            each item, index in posts
                                tr 
                                    td 
                                        input(
                                            type="checkbox"
                                            name="id"
                                            value=item.id 
                                        )
                                    td #{pagination.limitItems*(pagination.currentPage - 1) + (index + 1)}
                                    td #{item.title}
                                    td 
                                        img(
                                            src= item.thumbnail
                                            alt= item.title
                                            width="100px"
                                            height="auto"
                                        )
                                    td !{item.description}
                                    td
                                        if(role.permissions.includes("products_edit"))
                                            if(item.status == "active")
                                                a(href="javascript:;" 
                                                data-status = item.status
                                                data-id=item.id
                                                button-change-status
                                                class="badge badge-success"
                                                ) Hoạt động 
                                            else 
                                                a(href="javascript:;" 
                                                data-status = item.status
                                                data-id=item.id
                                                button-change-status
                                                class="badge badge-danger"
                                                ) Dừng hoạt động 
                                    td 
                                        p #{item.accountFullName}
                                        //- if(item.createdBy.createdAt)
                                        p 
                                            +formatDateTime(item.createdBy.createdAt)
                                    td 
                                        a(
                                            href=`${prefixAdmin}/posts/detail/${item.id}`
                                            class="btn btn-secondary btn-sm"
                                        ) Chi tiết
                                        if(role.permissions.includes("posts_edit"))
                                            a(
                                                href=`${prefixAdmin}/posts/edit/${item.id}`
                                                class="btn btn-warning btn-sm"
                                            ) Sửa
                                        if(role.permissions.includes("posts_delete"))
                                            button(
                                                class="btn btn-danger btn-sm ml-1"
                                                button-delete
                                                data-id=item.id
                                            ) Xóa
                                        
        //- //Phân trang
        +pagination(pagination)

        form(
            action=""
            method="POST"
            id="form-change-status"
            data-path=`${prefixAdmin}/posts/change-status`
        ) 

        form(
            action=""
            method="POST"
            id="form-delete-item"
            data-path=`${prefixAdmin}/posts/delete`
        ) 

        script(src="/admin/js/product.js") 