extend ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    .my-account-edit-container
        // Header Section
        .page-header
            .header-content
                .header-info
                    .breadcrumb-nav.mb-2
                        a.breadcrumb-link(href=`${prefixAdmin}/my-account`)
                            i.fas.fa-arrow-left.me-2
                            span Quay lại tài khoản
                        .breadcrumb-separator /
                        span.breadcrumb-current Cập nhật tài khoản
                    
                    .page-title-group
                        h1.page-title
                            i.fas.fa-user-edit.me-3
                            span Cập nhật tài khoản của tôi
                        .account-badge.mt-2
                            i.fas.fa-user.me-1
                            span #{user.fullName}

    +alert-error(5000)
    +alert-success(5000)

        // Form Container
        .form-container
    form(
        action=`${prefixAdmin}/my-account/edit?_method=PATCH`
        method="POST"
        enctype="multipart/form-data"
    )
                .form-sections
                    // Basic Information Section
                    .form-section
                        .section-header
                            h3.section-title
                                i.fas.fa-info-circle
                                span Thông tin cơ bản
                        
                        .section-content
                            .form-row
                                .form-group.col-6
                                    label.form-label(for="fullName") Họ và tên *
                                    input.form-input(
                type="text"
                id="fullName"
                name="fullName"
                                        placeholder="Nhập họ và tên..."
                                        value=user.fullName
                required 
                                    )
                                
                                .form-group.col-6
                                    label.form-label(for="email") Email *
                                    input.form-input(
                type="email"
                id="email"
                name="email"
                                        placeholder="Nhập địa chỉ email..."
                                        value=user.email
                required
                                    )
                            
                            .form-row
                                .form-group.col-6
                                    label.form-label(for="password") Mật khẩu mới
                                    input.form-input(
                type="password"
                id="password"
                name="password"
                                        placeholder="Nhập mật khẩu mới (để trống nếu không đổi)..."
                                    )
                                
                                .form-group.col-6
                                    label.form-label(for="phone") Số điện thoại
                                    input.form-input(
                                        type="tel"
                id="phone"
                name="phone"
                                        placeholder="Nhập số điện thoại..."
                value=user.phone
            )

                    // Avatar Section
                    .form-section
                        .section-header
                            h3.section-title
                                i.fas.fa-user-circle
                                span Ảnh đại diện
                        
                        .section-content
                            .form-row
                                .form-group.col-12
                                    .upload-container(upload-image)
                                        .current-image(style=user.avatar ? "display: block;" : "display: none;")
                                            .image-label Ảnh hiện tại:
                                            .current-image-wrapper
                                                img.current-thumbnail(src=user.avatar alt=user.fullName)
                                                .change-image-btn
                                                    i.fas.fa-camera
                                                    span Thay đổi ảnh
                                        
                                        .upload-area(style=user.avatar ? "display: none;" : "display: block;")
                                            input.upload-input(
                type="file"
                id="avatar"
                name="avatar"
                accept="image/*"
                upload-image-input
            )
                                            .upload-placeholder
                                                i.fas.fa-cloud-upload-alt
                                                p Kéo thả ảnh vào đây hoặc 
                                                    span.upload-link click để chọn
                                                small Hỗ trợ: JPG, PNG, GIF (tối đa 5MB)
                                            
                                            .image-preview-container
                                                img.image-preview(
                src=user.avatar
                upload-image-preview
                                                    style=user.avatar ? "display: block;" : "display: none;"
                                                )
                                                .remove-image(style=user.avatar ? "display: flex;" : "display: none;")
                                                    i.fas.fa-times

                // Form Actions
                .form-actions
                    button.btn-primary(type="submit")
                        i.fas.fa-save.me-2
                        span Cập nhật tài khoản
                    a.btn-secondary(href=`${prefixAdmin}/my-account`)
                        i.fas.fa-times.me-2
                        span Hủy bỏ

    script(src="/admin/js/product.js")

    style.
        .my-account-edit-container {
            padding: 20px;
            max-width: 1200px;
            margin: 0 auto;
        }

        .page-header {
            margin-bottom: 30px;
            padding-bottom: 20px;
            border-bottom: 1px solid #e9ecef;
        }

        .header-content {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            gap: 20px;
        }

        .breadcrumb-nav {
            display: flex;
            align-items: center;
            gap: 10px;
            font-size: 14px;
        }

        .breadcrumb-link {
            color: #6c757d;
            text-decoration: none;
            display: flex;
            align-items: center;
            transition: color 0.3s ease;
        }

        .breadcrumb-link:hover {
            color: #007bff;
            text-decoration: none;
        }

        .breadcrumb-separator {
            color: #adb5bd;
        }

        .breadcrumb-current {
            color: #495057;
            font-weight: 500;
        }

        .page-title {
            font-size: 32px;
            font-weight: 700;
            color: #2c3e50;
            margin: 0;
            display: flex;
            align-items: center;
            line-height: 1.2;
        }

        .page-title i {
            color: #007bff;
            font-size: 28px;
        }

        .account-badge {
            background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
            color: white;
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 500;
            display: inline-flex;
            align-items: center;
        }

        .btn-primary, .btn-secondary {
            padding: 12px 24px;
            border-radius: 8px;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            font-weight: 500;
            border: none;
            cursor: pointer;
            transition: all 0.3s ease;
            font-size: 14px;
        }

        .btn-primary {
            background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
            color: white;
            box-shadow: 0 4px 12px rgba(0, 123, 255, 0.4);
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(0, 123, 255, 0.6);
            text-decoration: none;
            color: white;
        }

        .btn-secondary {
            background: #6c757d;
            color: white;
        }

        .btn-secondary:hover {
            background: #5a6268;
            text-decoration: none;
            color: white;
        }

        .form-container {
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            overflow: hidden;
        }

        .form-sections {
            padding: 30px;
        }

        .form-section {
            margin-bottom: 40px;
        }

        .form-section:last-child {
            margin-bottom: 0;
        }

        .section-header {
            margin-bottom: 20px;
            padding-bottom: 12px;
            border-bottom: 2px solid #f8f9fa;
        }

        .section-title {
            font-size: 18px;
            font-weight: 600;
            color: #2c3e50;
            margin: 0;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .section-title i {
            color: #007bff;
            width: 20px;
        }

        .section-content {
            padding-top: 10px;
        }

        .form-row {
            display: flex;
            flex-wrap: wrap;
            margin: 0 -10px;
        }

        .form-group {
            padding: 0 10px;
            margin-bottom: 20px;
        }

        .col-12 { flex: 0 0 100%; }
        .col-6 { flex: 0 0 50%; }

        .form-label {
            display: block;
            margin-bottom: 8px;
            font-weight: 500;
            color: #495057;
            font-size: 14px;
        }

        .form-input {
            width: 100%;
            padding: 12px 16px;
            border: 2px solid #e9ecef;
            border-radius: 6px;
            font-size: 14px;
            transition: all 0.3s ease;
            background: white;
        }

        .form-input:focus {
            outline: none;
            border-color: #007bff;
            box-shadow: 0 0 0 3px rgba(0, 123, 255, 0.1);
        }

        .upload-container {
            position: relative;
        }

        .current-image {
            margin-bottom: 20px;
        }

        .image-label {
            font-size: 14px;
            font-weight: 500;
            color: #495057;
            margin-bottom: 10px;
        }

        .current-image-wrapper {
            position: relative;
            display: inline-block;
        }

        .current-thumbnail {
            max-width: 120px;
            max-height: 120px;
            border-radius: 50%;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            border: 3px solid #007bff;
            object-fit: cover;
        }

        .change-image-btn {
            position: absolute;
            bottom: 8px;
            right: 8px;
            background: rgba(0,0,0,0.7);
            color: white;
            padding: 8px 12px;
            border-radius: 4px;
            font-size: 12px;
            display: flex;
            align-items: center;
            gap: 5px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .change-image-btn:hover {
            background: rgba(0,0,0,0.9);
        }

        .upload-area {
            border: 2px dashed #ddd;
            border-radius: 8px;
            padding: 40px 20px;
            text-align: center;
            background: #fafafa;
            transition: all 0.3s ease;
            cursor: pointer;
        }

        .upload-area:hover {
            border-color: #007bff;
            background: #f8f9fa;
        }

        .upload-input {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            opacity: 0;
            cursor: pointer;
        }

        .upload-placeholder i {
            font-size: 48px;
            color: #bdc3c7;
            margin-bottom: 16px;
            display: block;
        }

        .upload-placeholder p {
            font-size: 16px;
            color: #7f8c8d;
            margin: 0 0 8px 0;
        }

        .upload-link {
            color: #007bff;
            font-weight: 500;
            cursor: pointer;
        }

        .upload-placeholder small {
            color: #95a5a6;
            font-size: 12px;
        }

        .image-preview-container {
            position: relative;
            margin-top: 20px;
        }

        .image-preview {
            max-width: 120px;
            max-height: 120px;
            border-radius: 50%;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            border: 3px solid #007bff;
            object-fit: cover;
        }

        .remove-image {
            position: absolute;
            top: -8px;
            right: -8px;
            width: 24px;
            height: 24px;
            background: #e74c3c;
            color: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            font-size: 12px;
            transition: all 0.3s ease;
        }

        .remove-image:hover {
            background: #c0392b;
            transform: scale(1.1);
        }

        .form-actions {
            padding: 20px 30px;
            background: #f8f9fa;
            border-top: 1px solid #e9ecef;
            display: flex;
            gap: 15px;
            justify-content: flex-end;
        }

        @media (max-width: 768px) {
            .my-account-edit-container {
                padding: 15px;
            }
            
            .header-content {
                flex-direction: column;
                gap: 15px;
            }
            
            .page-title {
                font-size: 24px;
            }
            
            .form-sections {
                padding: 20px;
            }
            
            .form-row {
                margin: 0 -5px;
            }
            
            .form-group {
                padding: 0 5px;
            }
            
            .col-6 {
                flex: 0 0 100%;
            }
            
            .form-actions {
                padding: 15px 20px;
                flex-direction: column;
            }

            .btn-primary, .btn-secondary {
                justify-content: center;
            }
        }
