extend ../../layouts/default.pug
include ../../mixins/alert.pug

block main 
    if(role.permissions.includes("info-orders_create"))
        +alert-error(5000)
        +alert-success(5000)

        .order-create-container
            // Header Section
            .page-header
                .header-content
                    h1.page-title
                        i.fas.fa-plus
                        span Thêm mới đơn hàng
                    .header-actions
                        a.btn-secondary(href=`${prefixAdmin}/info-orders`)
                            i.fas.fa-arrow-left
                            span Quay lại danh sách

            // Form Container
            .form-container
                form#form-create-order(
                    action=`${prefixAdmin}/info-orders/create`
            method="POST"
                )
                    .form-sections
                        // Customer Information Section
                        .form-section
                            .section-header
                                h3.section-title
                                    i.fas.fa-user
                                    span Thông tin khách hàng
                            
                            .section-content
                                .form-row
                                    .form-group.col-6
                                        label.form-label(for="fullName") Họ và tên *
                                        input.form-input(
                    type="text"
                                            id="fullName"
                                            name="fullName"
                                            placeholder="Nhập họ và tên khách hàng..."
                                            required
                                        )
                                    
                                    .form-group.col-6
                                        label.form-label(for="phone") Số điện thoại *
                                        input.form-input(
                                            type="tel"
                                            id="phone"
                                            name="phone"
                                            placeholder="Nhập số điện thoại..."
                    required 
                )
                                
                                .form-row
                                    .form-group.col-12
                                        label.form-label(for="address") Địa chỉ giao hàng *
                                        textarea.form-textarea(
                                            id="address"
                                            name="address"
                                            rows="3"
                                            placeholder="Nhập địa chỉ giao hàng chi tiết..."
                                            required
                                        )

                        // Order Information Section
                        .form-section
                            .section-header
                                h3.section-title
                                    i.fas.fa-shopping-cart
                                    span Thông tin đơn hàng
                            
                            .section-content
                                .form-row
                                    .form-group.col-6
                                        label.form-label(for="totalPrice") Tổng tiền ($) *
                                        input.form-input(
                                            type="number"
                                            id="totalPrice"
                                            name="totalPrice"
                                            placeholder="0.00"
                                            min="0"
                                            step="0.01"
                                            required
                                        )
                                    
                                    .form-group.col-6
                                        label.form-label Trạng thái đơn hàng
                                        .radio-group
                                            .radio-item
                                                input.radio-input(
                    type="radio"
                                                    id="statusPending"
                                                    name="status"
                                                    value="pending"
                    checked
                )
                                                label.radio-label(for="statusPending") Chờ xử lý
                                            .radio-item
                                                input.radio-input(
                                                    type="radio"
                                                    id="statusConfirmed"
                                                    name="status"
                                                    value="confirmed"
                                                )
                                                label.radio-label(for="statusConfirmed") Đã xác nhận

                                .form-row
                                    .form-group.col-12
                                        label.form-label(for="productList") Danh sách sản phẩm
                                        textarea.form-textarea(
                                            id="productList"
                                            name="productList"
                                            rows="4"
                                            placeholder="Nhập danh sách sản phẩm (tên, số lượng, giá)..."
                                        )

                        // Payment & Shipping Section
                        .form-section
                            .section-header
                                h3.section-title
                                    i.fas.fa-credit-card
                                    span Thanh toán & Giao hàng
                            
                            .section-content
                                .form-row
                                    .form-group.col-6
                                        label.form-label(for="paymentMethod") Phương thức thanh toán
                                        select.form-select(
                                            id="paymentMethod"
                                            name="paymentMethod"
                                        )
                                            option(value="cod") Thanh toán khi nhận hàng (COD)
                                            option(value="bank_transfer") Chuyển khoản ngân hàng
                                            option(value="online") Thanh toán online
                                    
                                    .form-group.col-6
                                        label.form-label(for="shippingFee") Phí vận chuyển ($)
                                        input.form-input(
                    type="number"
                                            id="shippingFee"
                                            name="shippingFee"
                                            placeholder="0.00"
                    min="0"
                                            step="0.01"
                    value="0"
                                        )

                        // Notes Section
                        .form-section
                            .section-header
                                h3.section-title
                                    i.fas.fa-sticky-note
                                    span Ghi chú
                            
                            .section-content
                                .form-row
                                    .form-group.col-12
                                        label.form-label(for="notes") Ghi chú đơn hàng
                                        textarea.form-textarea(
                                            id="notes"
                                            name="notes"
                                            rows="4"
                                            placeholder="Nhập ghi chú về đơn hàng (yêu cầu đặc biệt, thời gian giao hàng...)..."
                                        )

                    // Form Actions
                    .form-actions
                        button.btn-primary(type="submit")
                            i.fas.fa-save
                            span Tạo đơn hàng
                        a.btn-secondary(href=`${prefixAdmin}/info-orders`)
                            i.fas.fa-times
                            span Hủy bỏ

        style.
            .order-create-container {
                padding: 20px;
                max-width: 1200px;
                margin: 0 auto;
            }

            .page-header {
                margin-bottom: 30px;
                padding-bottom: 20px;
                border-bottom: 1px solid #e9ecef;
            }

            .header-content {
                display: flex;
                justify-content: space-between;
                align-items: flex-start;
            }

            .page-title {
                font-size: 28px;
                font-weight: 600;
                color: #2c3e50;
                margin: 0;
                display: flex;
                align-items: center;
                gap: 12px;
            }

            .page-title i {
                color: #27ae60;
            }

            .header-actions {
                display: flex;
                gap: 10px;
            }

            .btn-primary, .btn-secondary {
                padding: 12px 24px;
                border-radius: 6px;
                text-decoration: none;
                display: inline-flex;
                align-items: center;
                gap: 8px;
                font-weight: 500;
                border: none;
                cursor: pointer;
                transition: all 0.3s ease;
            }

            .btn-primary {
                background: #27ae60;
                color: white;
            }

            .btn-primary:hover {
                background: #229954;
            }

            .btn-secondary {
                background: #95a5a6;
                color: white;
            }

            .btn-secondary:hover {
                background: #7f8c8d;
                text-decoration: none;
                color: white;
            }

            .form-container {
                background: white;
                border-radius: 12px;
                box-shadow: 0 4px 6px rgba(0,0,0,0.1);
                overflow: hidden;
            }

            .form-sections {
                padding: 30px;
            }

            .form-section {
                margin-bottom: 40px;
            }

            .form-section:last-child {
                margin-bottom: 0;
            }

            .section-header {
                margin-bottom: 20px;
                padding-bottom: 12px;
                border-bottom: 2px solid #f8f9fa;
            }

            .section-title {
                font-size: 18px;
                font-weight: 600;
                color: #2c3e50;
                margin: 0;
                display: flex;
                align-items: center;
                gap: 10px;
            }

            .section-title i {
                color: #27ae60;
                width: 20px;
            }

            .section-content {
                padding-top: 10px;
            }

            .form-row {
                display: flex;
                flex-wrap: wrap;
                margin: 0 -10px;
            }

            .form-group {
                padding: 0 10px;
                margin-bottom: 20px;
            }

            .col-12 { flex: 0 0 100%; }
            .col-6 { flex: 0 0 50%; }

            .form-label {
                display: block;
                margin-bottom: 8px;
                font-weight: 500;
                color: #495057;
                font-size: 14px;
            }

            .form-input, .form-select, .form-textarea {
                width: 100%;
                padding: 12px 16px;
                border: 2px solid #e9ecef;
                border-radius: 6px;
                font-size: 14px;
                transition: all 0.3s ease;
                background: white;
            }

            .form-input:focus, .form-select:focus, .form-textarea:focus {
                outline: none;
                border-color: #27ae60;
                box-shadow: 0 0 0 3px rgba(39, 174, 96, 0.1);
            }

            .form-textarea {
                resize: vertical;
                min-height: 80px;
            }

            .radio-group {
                display: flex;
                gap: 20px;
                margin-top: 8px;
            }

            .radio-item {
                display: flex;
                align-items: center;
                gap: 8px;
            }

            .radio-input {
                width: 18px;
                height: 18px;
                accent-color: #27ae60;
            }

            .radio-label {
                font-size: 14px;
                color: #495057;
                cursor: pointer;
                margin: 0;
                white-space: nowrap;
            }

            .form-actions {
                padding: 20px 30px;
                background: #f8f9fa;
                border-top: 1px solid #e9ecef;
                display: flex;
                gap: 12px;
                justify-content: flex-end;
            }

            @media (max-width: 768px) {
                .order-create-container {
                    padding: 15px;
                }
                
                .header-content {
                    flex-direction: column;
                    gap: 15px;
                }
                
                .header-actions {
                    flex-wrap: wrap;
                }
                
                .form-sections {
                    padding: 20px;
                }
                
                .form-row {
                    margin: 0;
                }
                
                .form-group {
                    padding: 0;
                }
                
                .col-6 {
                    flex: 0 0 100%;
                }
                
                .form-actions {
                    padding: 15px 20px;
                    flex-direction: column;
                }
                
                .radio-group {
                    flex-direction: column;
                    gap: 10px;
                }
            } 