extend ../../layouts/default.pug
include ../../mixins/alert.pug

block main 
    if(role.permissions.includes("info-orders_edit"))
        +alert-error(5000)
        +alert-success(5000)

        .order-edit-container
            // Header Section
            .page-header
                .header-content
                    .header-info
                        .breadcrumb-nav.mb-2
                            a.breadcrumb-link(href=`${prefixAdmin}/info-orders`)
                                i.fas.fa-arrow-left.me-2
                                span Quay lại danh sách
                            .breadcrumb-separator /
                            span.breadcrumb-current Chỉnh sửa đơn hàng
                        
                        .page-title-group
                    h1.page-title
                                i.fas.fa-edit.me-3
                        span Chỉnh sửa đơn hàng
                        if(order)
                                .order-badge.mt-2
                                    i.fas.fa-receipt.me-1
                                    span ##{order.id || order._id}

                    .header-actions
                        if(order)
                            a.btn-info(href=`${prefixAdmin}/info-orders/detail/${order.id || order._id}`)
                                i.fas.fa-eye.me-2
                                span Xem chi tiết

            // Form Container
            .form-container
                if(order)
                    form#form-edit-order(
                        action=`${prefixAdmin}/info-orders/edit/${order.id || order._id}?_method=PATCH`
            method="POST"
                    )
                        .form-sections
                            // Customer Information Section
                            .form-section
                                .section-header
                                    h3.section-title
                                        i.fas.fa-user
                                        span Thông tin khách hàng
                                
                                .section-content
                                    .form-row
                                        .form-group.col-6
                                            label.form-label(for="fullName") Họ và tên *
                                            input.form-input(
                    type="text"
                                                id="fullName"
                                                name="fullName"
                                                placeholder="Nhập họ và tên khách hàng..."
                                                value=order.fullName || ""
                    required 
                                            )
                                        
                                        .form-group.col-6
                                            label.form-label(for="phone") Số điện thoại *
                                            input.form-input(
                                                type="tel"
                                                id="phone"
                                                name="phone"
                                                placeholder="Nhập số điện thoại..."
                                                value=order.phone || ""
                                                required
                                            )
                                    
                                    .form-row
                                        .form-group.col-12
                                            label.form-label(for="address") Địa chỉ giao hàng *
                                            textarea.form-textarea(
                                                id="address"
                                                name="address"
                                                rows="3"
                                                placeholder="Nhập địa chỉ giao hàng..."
                                                required
                                            ) #{order.address || ""}

                            // Order Information Section
                            .form-section
                                .section-header
                                    h3.section-title
                                        i.fas.fa-shopping-cart
                                        span Thông tin đơn hàng
                                
                                .section-content
                                    .form-row
                                        .form-group.col-6
                                            label.form-label(for="totalPrice") Tổng tiền
                                            .price-display
                                                span.currency $
                                                span.amount #{order.totalPrice || 0}
                                        
                                        .form-group.col-6
                                            label.form-label Trạng thái đơn hàng
                                            .radio-group
                                                .radio-item
                                                    input.radio-input(
                    type="radio"
                                                        id="statusPending"
                                                        name="status"
                                                        value="pending"
                                                        checked=(order.status == "pending" ? true : false)
                                                    )
                                                    label.radio-label(for="statusPending") Chờ xử lý
                                                .radio-item
                                                    input.radio-input(
                    type="radio"
                                                        id="statusConfirmed"
                                                        name="status"
                                                        value="confirmed"
                                                        checked=(order.status == "confirmed" ? true : false)
                                                    )
                                                    label.radio-label(for="statusConfirmed") Đã xác nhận
                                                .radio-item
                                                    input.radio-input(
                                                        type="radio"
                                                        id="statusShipping"
                                                        name="status"
                                                        value="shipping"
                                                        checked=(order.status == "shipping" ? true : false)
                                                    )
                                                    label.radio-label(for="statusShipping") Đang giao
                                                .radio-item
                                                    input.radio-input(
                    type="radio"
                                                        id="statusDelivered"
                    name="status"
                                                        value="delivered"
                                                        checked=(order.status == "delivered" ? true : false)
                                                    )
                                                    label.radio-label(for="statusDelivered") Đã giao
                                                .radio-item
                                                    input.radio-input(
                    type="radio"
                                                        id="statusCancelled"
                    name="status"
                                                        value="cancelled"
                                                        checked=(order.status == "cancelled" ? true : false)
                                                    )
                                                    label.radio-label(for="statusCancelled") Đã hủy

                            // Order Items Section (Read-only display)
                            if(order.products && order.products.length > 0)
                                .form-section
                                    .section-header
                                        h3.section-title
                                            i.fas.fa-list
                                            span Sản phẩm trong đơn hàng
                                    
                                    .section-content
                                        .order-items
                                            each item in order.products
                                                .order-item
                                                    .item-info
                                                        h6.item-name #{item.title || item.name}
                                                        p.item-details Số lượng: #{item.quantity} | Giá: $#{item.price}
                                                    .item-total $#{item.quantity * item.price}

                            // Notes Section
                            .form-section
                                .section-header
                                    h3.section-title
                                        i.fas.fa-sticky-note
                                        span Ghi chú
                                
                                .section-content
                                    .form-row
                                        .form-group.col-12
                                            label.form-label(for="notes") Ghi chú đơn hàng
                                            textarea.form-textarea(
                                                id="notes"
                                                name="notes"
                                                rows="4"
                                                placeholder="Nhập ghi chú về đơn hàng..."
                                            ) #{order.notes || ""}

                        // Form Actions
                        .form-actions
                            button.btn-primary(type="submit")
                                i.fas.fa-save.me-2
                                span Cập nhật đơn hàng
                            a.btn-secondary(href=`${prefixAdmin}/info-orders`)
                                i.fas.fa-times.me-2
                                span Hủy bỏ
                
                else 
                    .empty-state
                        .empty-icon
                            i.fas.fa-exclamation-triangle
                        h3.empty-title Không tìm thấy đơn hàng
                        p.empty-description Đơn hàng không tồn tại hoặc đã bị xóa
                        .empty-actions
                            a.btn-primary(href=`${prefixAdmin}/info-orders`)
                                i.fas.fa-arrow-left.me-2
                                span Quay lại danh sách

        script(src="/admin/js/product.js")

        style.
            .order-edit-container {
                padding: 20px;
                max-width: 1200px;
                margin: 0 auto;
            }

            .page-header {
                margin-bottom: 30px;
                padding-bottom: 20px;
                border-bottom: 1px solid #e9ecef;
            }

            .header-content {
                display: flex;
                justify-content: space-between;
                align-items: flex-start;
                gap: 20px;
            }

            .breadcrumb-nav {
                display: flex;
                align-items: center;
                gap: 10px;
                font-size: 14px;
            }

            .breadcrumb-link {
                color: #6c757d;
                text-decoration: none;
                display: flex;
                align-items: center;
                transition: color 0.3s ease;
            }

            .breadcrumb-link:hover {
                color: #17a2b8;
                text-decoration: none;
            }

            .breadcrumb-separator {
                color: #adb5bd;
            }

            .breadcrumb-current {
                color: #495057;
                font-weight: 500;
            }

            .page-title {
                font-size: 32px;
                font-weight: 700;
                color: #2c3e50;
                margin: 0;
                display: flex;
                align-items: center;
                line-height: 1.2;
            }

            .page-title i {
                color: #17a2b8;
                font-size: 28px;
            }

            .order-badge {
                background: linear-gradient(135deg, #17a2b8 0%, #138496 100%);
                color: white;
                padding: 6px 12px;
                border-radius: 20px;
                font-size: 12px;
                font-weight: 500;
                display: inline-flex;
                align-items: center;
            }

            .header-actions {
                display: flex;
                gap: 12px;
                flex-shrink: 0;
            }

            .btn-primary, .btn-secondary, .btn-info {
                padding: 12px 24px;
                border-radius: 8px;
                text-decoration: none;
                display: inline-flex;
                align-items: center;
                font-weight: 500;
                border: none;
                cursor: pointer;
                transition: all 0.3s ease;
                font-size: 14px;
            }

            .btn-primary {
                background: linear-gradient(135deg, #17a2b8 0%, #138496 100%);
                color: white;
                box-shadow: 0 4px 12px rgba(23, 162, 184, 0.4);
            }

            .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 20px rgba(23, 162, 184, 0.6);
                text-decoration: none;
                color: white;
            }

            .btn-secondary {
                background: #6c757d;
                color: white;
            }

            .btn-secondary:hover {
                background: #5a6268;
                text-decoration: none;
                color: white;
            }

            .btn-info {
                background: #17a2b8;
                color: white;
            }

            .btn-info:hover {
                background: #138496;
                text-decoration: none;
                color: white;
            }

            .form-container {
                background: white;
                border-radius: 12px;
                box-shadow: 0 4px 6px rgba(0,0,0,0.1);
                overflow: hidden;
            }

            .form-sections {
                padding: 30px;
            }

            .form-section {
                margin-bottom: 40px;
            }

            .form-section:last-child {
                margin-bottom: 0;
            }

            .section-header {
                margin-bottom: 20px;
                padding-bottom: 12px;
                border-bottom: 2px solid #f8f9fa;
            }

            .section-title {
                font-size: 18px;
                font-weight: 600;
                color: #2c3e50;
                margin: 0;
                display: flex;
                align-items: center;
                gap: 10px;
            }

            .section-title i {
                color: #17a2b8;
                width: 20px;
            }

            .section-content {
                padding-top: 10px;
            }

            .form-row {
                display: flex;
                flex-wrap: wrap;
                margin: 0 -10px;
            }

            .form-group {
                padding: 0 10px;
                margin-bottom: 20px;
            }

            .col-12 { flex: 0 0 100%; }
            .col-6 { flex: 0 0 50%; }

            .form-label {
                display: block;
                margin-bottom: 8px;
                font-weight: 500;
                color: #495057;
                font-size: 14px;
            }

            .form-input, .form-textarea {
                width: 100%;
                padding: 12px 16px;
                border: 2px solid #e9ecef;
                border-radius: 6px;
                font-size: 14px;
                transition: all 0.3s ease;
                background: white;
            }

            .form-input:focus, .form-textarea:focus {
                outline: none;
                border-color: #17a2b8;
                box-shadow: 0 0 0 3px rgba(23, 162, 184, 0.1);
            }

            .form-textarea {
                resize: vertical;
                min-height: 80px;
            }

            .price-display {
                display: flex;
                align-items: center;
                gap: 5px;
                padding: 12px 16px;
                background: #f8f9fa;
                border-radius: 6px;
                border: 2px solid #e9ecef;
                font-weight: 600;
                color: #17a2b8;
                font-size: 16px;
            }

            .currency {
                color: #6c757d;
            }

            .radio-group {
                display: flex;
                flex-wrap: wrap;
                gap: 15px;
                margin-top: 8px;
            }

            .radio-item {
                display: flex;
                align-items: center;
                gap: 8px;
            }

            .radio-input {
                width: 18px;
                height: 18px;
                accent-color: #17a2b8;
            }

            .radio-label {
                font-size: 14px;
                color: #495057;
                cursor: pointer;
                margin: 0;
                white-space: nowrap;
            }

            .order-items {
                display: flex;
                flex-direction: column;
                gap: 15px;
            }

            .order-item {
                display: flex;
                justify-content: space-between;
                align-items: center;
                padding: 15px;
                background: #f8f9fa;
                border-radius: 8px;
                border-left: 4px solid #17a2b8;
            }

            .item-info h6 {
                margin: 0 0 5px 0;
                color: #2c3e50;
                font-weight: 600;
            }

            .item-details {
                margin: 0;
                color: #6c757d;
                font-size: 14px;
            }

            .item-total {
                font-weight: 600;
                color: #17a2b8;
                font-size: 16px;
            }

            .form-actions {
                padding: 20px 30px;
                background: #f8f9fa;
                border-top: 1px solid #e9ecef;
                display: flex;
                gap: 15px;
                justify-content: flex-end;
            }

            .empty-state {
                padding: 60px 30px;
                text-align: center;
                color: #6c757d;
            }

            .empty-icon {
                margin-bottom: 20px;
            }

            .empty-icon i {
                font-size: 64px;
                color: #17a2b8;
                opacity: 0.5;
            }

            .empty-title {
                font-size: 24px;
                font-weight: 600;
                color: #2c3e50;
                margin-bottom: 12px;
            }

            .empty-description {
                font-size: 16px;
                margin-bottom: 30px;
                line-height: 1.5;
            }

            .empty-actions {
                display: flex;
                justify-content: center;
                gap: 12px;
            }

            @media (max-width: 768px) {
                .order-edit-container {
                    padding: 15px;
                }
                
                .header-content {
                    flex-direction: column;
                    gap: 15px;
                }
                
                .header-actions {
                    align-self: stretch;
                    justify-content: stretch;
                }

                .header-actions .btn-info {
                    flex: 1;
                    justify-content: center;
                }
                
                .page-title {
                    font-size: 24px;
                }
                
                .form-sections {
                    padding: 20px;
                }
                
                .form-row {
                    margin: 0 -5px;
                }
                
                .form-group {
                    padding: 0 5px;
                }
                
                .col-6 {
                    flex: 0 0 100%;
                }
                
                .form-actions {
                    padding: 15px 20px;
                    flex-direction: column;
                }
                
                .radio-group {
                    flex-direction: column;
                    gap: 10px;
                }

                .order-item {
                    flex-direction: column;
                    align-items: flex-start;
                    gap: 10px;
                }

                .empty-state {
                    padding: 40px 20px;
                }

                .empty-icon i {
                    font-size: 48px;
                }

                .empty-title {
                    font-size: 20px;
                }

                .empty-actions {
                    flex-direction: column;
                }

                .btn-primary, .btn-secondary, .btn-info {
                    justify-content: center;
                }
            } 