extend ../../layouts/default.pug
include ../../mixins/alert.pug

block main 
    if(role.permissions.includes("roles_edit"))
        +alert-success(5000)
        +alert-error(5000)

        .role-edit-container
            // Header Section
            .page-header
                .header-content
                    .header-info
                        .breadcrumb-nav.mb-2
                            a.breadcrumb-link(href=`${prefixAdmin}/roles`)
                                i.fas.fa-arrow-left.me-2
                                span Quay lại danh sách
                            .breadcrumb-separator /
                            span.breadcrumb-current Chỉnh sửa nhóm quyền
                        
                        .page-title-group
                            h1.page-title
                                i.fas.fa-user-shield.me-3
                                span Chỉnh sửa nhóm quyền
                            if(data)
                                .role-badge.mt-2
                                    i.fas.fa-tag.me-1
                                    span #{data.title}

                    .header-actions
                        if(data)
                            a.btn-info(href=`${prefixAdmin}/roles/detail/${data.id}`)
                                i.fas.fa-eye.me-2
                                span Xem chi tiết

            // Form Container
            .form-container
                if(data)
                    form#form-edit-role(
                        action=`${prefixAdmin}/roles/edit/${data.id}?_method=PATCH`
                        method="POST"
                    )
                        .form-sections
                            // Basic Information Section
                            .form-section
                                .section-header
                                    h3.section-title
                                        i.fas.fa-info-circle
                                        span Thông tin cơ bản
                                
                                .section-content
                                    .form-row
                                        .form-group.col-12
                                            label.form-label(for="title") Tên nhóm quyền *
                                            input.form-input(
                                                type="text"
                                                id="title"
                                                name="title"
                                                placeholder="Nhập tên nhóm quyền..."
                                                value=data.title
                                                required
                                            )
                                    
                                    .form-row
                                        .form-group.col-12
                                            label.form-label(for="desc") Mô tả nhóm quyền
                                            textarea.form-textarea(
                                                id="desc"
                                                name="description"
                                                rows="4"
                                                placeholder="Nhập mô tả chi tiết về nhóm quyền..."
                                            ) #{data.description}

                        // Form Actions
                        .form-actions
                            button.btn-primary(type="submit")
                                i.fas.fa-save.me-2
                                span Cập nhật nhóm quyền
                            a.btn-secondary(href=`${prefixAdmin}/roles`)
                                i.fas.fa-times.me-2
                                span Hủy bỏ
                
                else 
                    .empty-state
                        .empty-icon
                            i.fas.fa-exclamation-triangle
                        h3.empty-title Không tìm thấy nhóm quyền
                        p.empty-description Vui lòng tạo nhóm quyền trước khi chỉnh sửa
                        .empty-actions
                            a.btn-primary(href=`${prefixAdmin}/roles/create`)
                                i.fas.fa-plus.me-2
                                span Tạo nhóm quyền mới

        script(src="/admin/js/product.js")

        style.
            .role-edit-container {
                padding: 20px;
                max-width: 1200px;
                margin: 0 auto;
            }

            .page-header {
                margin-bottom: 30px;
                padding-bottom: 20px;
                border-bottom: 1px solid #e9ecef;
            }

            .header-content {
                display: flex;
                justify-content: space-between;
                align-items: flex-start;
                gap: 20px;
            }

            .breadcrumb-nav {
                display: flex;
                align-items: center;
                gap: 10px;
                font-size: 14px;
            }

            .breadcrumb-link {
                color: #6c757d;
                text-decoration: none;
                display: flex;
                align-items: center;
                transition: color 0.3s ease;
            }

            .breadcrumb-link:hover {
                color: #e74c3c;
                text-decoration: none;
            }

            .breadcrumb-separator {
                color: #adb5bd;
            }

            .breadcrumb-current {
                color: #495057;
                font-weight: 500;
            }

            .page-title {
                font-size: 32px;
                font-weight: 700;
                color: #2c3e50;
                margin: 0;
                display: flex;
                align-items: center;
                line-height: 1.2;
            }

            .page-title i {
                color: #e74c3c;
                font-size: 28px;
            }

            .role-badge {
                background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
                color: white;
                padding: 6px 12px;
                border-radius: 20px;
                font-size: 12px;
                font-weight: 500;
                display: inline-flex;
                align-items: center;
            }

            .header-actions {
                display: flex;
                gap: 12px;
                flex-shrink: 0;
            }

            .btn-primary, .btn-secondary, .btn-info {
                padding: 12px 24px;
                border-radius: 8px;
                text-decoration: none;
                display: inline-flex;
                align-items: center;
                font-weight: 500;
                border: none;
                cursor: pointer;
                transition: all 0.3s ease;
                font-size: 14px;
            }

            .btn-primary {
                background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
                color: white;
                box-shadow: 0 4px 12px rgba(231, 76, 60, 0.4);
            }

            .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 20px rgba(231, 76, 60, 0.6);
                text-decoration: none;
                color: white;
            }

            .btn-secondary {
                background: #6c757d;
                color: white;
            }

            .btn-secondary:hover {
                background: #5a6268;
                text-decoration: none;
                color: white;
            }

            .btn-info {
                background: #17a2b8;
                color: white;
            }

            .btn-info:hover {
                background: #138496;
                text-decoration: none;
                color: white;
            }

            .form-container {
                background: white;
                border-radius: 12px;
                box-shadow: 0 4px 6px rgba(0,0,0,0.1);
                overflow: hidden;
            }

            .form-sections {
                padding: 30px;
            }

            .form-section {
                margin-bottom: 40px;
            }

            .form-section:last-child {
                margin-bottom: 0;
            }

            .section-header {
                margin-bottom: 20px;
                padding-bottom: 12px;
                border-bottom: 2px solid #f8f9fa;
            }

            .section-title {
                font-size: 18px;
                font-weight: 600;
                color: #2c3e50;
                margin: 0;
                display: flex;
                align-items: center;
                gap: 10px;
            }

            .section-title i {
                color: #e74c3c;
                width: 20px;
            }

            .section-content {
                padding-top: 10px;
            }

            .form-row {
                display: flex;
                flex-wrap: wrap;
                margin: 0 -10px;
            }

            .form-group {
                padding: 0 10px;
                margin-bottom: 20px;
            }

            .col-12 { flex: 0 0 100%; }

            .form-label {
                display: block;
                margin-bottom: 8px;
                font-weight: 500;
                color: #495057;
                font-size: 14px;
            }

            .form-input, .form-textarea {
                width: 100%;
                padding: 12px 16px;
                border: 2px solid #e9ecef;
                border-radius: 6px;
                font-size: 14px;
                transition: all 0.3s ease;
                background: white;
            }

            .form-input:focus, .form-textarea:focus {
                outline: none;
                border-color: #e74c3c;
                box-shadow: 0 0 0 3px rgba(231, 76, 60, 0.1);
            }

            .form-textarea {
                resize: vertical;
                min-height: 100px;
            }

            .form-actions {
                padding: 20px 30px;
                background: #f8f9fa;
                border-top: 1px solid #e9ecef;
                display: flex;
                gap: 15px;
                justify-content: flex-end;
            }

            .empty-state {
                padding: 60px 30px;
                text-align: center;
                color: #6c757d;
            }

            .empty-icon {
                margin-bottom: 20px;
            }

            .empty-icon i {
                font-size: 64px;
                color: #e74c3c;
                opacity: 0.5;
            }

            .empty-title {
                font-size: 24px;
                font-weight: 600;
                color: #2c3e50;
                margin-bottom: 12px;
            }

            .empty-description {
                font-size: 16px;
                margin-bottom: 30px;
                line-height: 1.5;
            }

            .empty-actions {
                display: flex;
                justify-content: center;
                gap: 12px;
            }

            @media (max-width: 768px) {
                .role-edit-container {
                    padding: 15px;
                }
                
                .header-content {
                    flex-direction: column;
                    gap: 15px;
                }

                .header-actions {
                    align-self: stretch;
                    justify-content: stretch;
                }

                .header-actions .btn-info {
                    flex: 1;
                    justify-content: center;
                }
                
                .page-title {
                    font-size: 24px;
                }
                
                .form-sections {
                    padding: 20px;
                }
                
                .form-row {
                    margin: 0 -5px;
                }
                
                .form-group {
                    padding: 0 5px;
                }
                
                .form-actions {
                    padding: 15px 20px;
                    flex-direction: column;
                }

                .empty-state {
                    padding: 40px 20px;
                }

                .empty-icon i {
                    font-size: 48px;
                }

                .empty-title {
                    font-size: 20px;
                }

                .empty-actions {
                    flex-direction: column;
                }

                .btn-primary, .btn-secondary, .btn-info {
                    justify-content: center;
                }
            }

