extend ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    if(role.permissions.includes("roles_create"))
        +alert-success(5000)
        +alert-error(5000)

        .role-create-container
            // Header Section
            .page-header
                .header-content
                    h1.page-title
                        i.fas.fa-plus
                        span Thêm mới nhóm quyền
                    .header-actions
                        a.btn-secondary(href=`${prefixAdmin}/roles`)
                            i.fas.fa-arrow-left
                            span Quay lại danh sách

            // Form Container
            .form-container
                form#form-create-role(
                    action=`${prefixAdmin}/roles/create`
                    method="POST"
                )
                    .form-sections
                        // Basic Information Section
                        .form-section
                            .section-header
                                h3.section-title
                                    i.fas.fa-info-circle
                                    span Thông tin cơ bản
                            
                            .section-content
                                .form-row
                                    .form-group.col-12
                                        label.form-label(for="title") Tên nhóm quyền *
                                        input.form-input(
                                            type="text"
                                            id="title"
                                            name="title"
                                            placeholder="Nhập tên nhóm quyền..."
                                            required
                                        )
                                
                                .form-row
                                    .form-group.col-12
                                        label.form-label(for="desc") Mô tả nhóm quyền
                                        textarea.form-textarea(
                                            id="desc"
                                            name="description"
                                            rows="4"
                                            placeholder="Nhập mô tả chi tiết về nhóm quyền..."
                                        )

                    // Form Actions
                    .form-actions
                        button.btn-primary(type="submit")
                            i.fas.fa-save
                            span Tạo nhóm quyền
                        a.btn-secondary(href=`${prefixAdmin}/roles`)
                            i.fas.fa-times
                            span Hủy bỏ

        style.
            .role-create-container {
                padding: 20px;
                max-width: 1200px;
                margin: 0 auto;
            }

            .page-header {
                margin-bottom: 30px;
                padding-bottom: 20px;
                border-bottom: 1px solid #e9ecef;
            }

            .header-content {
                display: flex;
                justify-content: space-between;
                align-items: flex-start;
            }

            .page-title {
                font-size: 28px;
                font-weight: 600;
                color: #2c3e50;
                margin: 0;
                display: flex;
                align-items: center;
                gap: 12px;
            }

            .page-title i {
                color: #e74c3c;
            }

            .header-actions {
                display: flex;
                gap: 10px;
            }

            .btn-primary, .btn-secondary {
                padding: 12px 24px;
                border-radius: 6px;
                text-decoration: none;
                display: inline-flex;
                align-items: center;
                gap: 8px;
                font-weight: 500;
                border: none;
                cursor: pointer;
                transition: all 0.3s ease;
            }

            .btn-primary {
                background: #27ae60;
                color: white;
            }

            .btn-primary:hover {
                background: #229954;
            }

            .btn-secondary {
                background: #95a5a6;
                color: white;
            }

            .btn-secondary:hover {
                background: #7f8c8d;
                text-decoration: none;
                color: white;
            }

            .form-container {
                background: white;
                border-radius: 12px;
                box-shadow: 0 4px 6px rgba(0,0,0,0.1);
                overflow: hidden;
            }

            .form-sections {
                padding: 30px;
            }

            .form-section {
                margin-bottom: 40px;
            }

            .form-section:last-child {
                margin-bottom: 0;
            }

            .section-header {
                margin-bottom: 20px;
                padding-bottom: 12px;
                border-bottom: 2px solid #f8f9fa;
            }

            .section-title {
                font-size: 18px;
                font-weight: 600;
                color: #2c3e50;
                margin: 0;
                display: flex;
                align-items: center;
                gap: 10px;
            }

            .section-title i {
                color: #e74c3c;
                width: 20px;
            }

            .section-content {
                padding-top: 10px;
            }

            .form-row {
                display: flex;
                flex-wrap: wrap;
                margin: 0 -10px;
            }

            .form-group {
                padding: 0 10px;
                margin-bottom: 20px;
            }

            .col-12 { flex: 0 0 100%; }

            .form-label {
                display: block;
                margin-bottom: 8px;
                font-weight: 500;
                color: #495057;
                font-size: 14px;
            }

            .form-input, .form-textarea {
                width: 100%;
                padding: 12px 16px;
                border: 2px solid #e9ecef;
                border-radius: 6px;
                font-size: 14px;
                transition: all 0.3s ease;
                background: white;
            }

            .form-input:focus, .form-textarea:focus {
                outline: none;
                border-color: #e74c3c;
                box-shadow: 0 0 0 3px rgba(231, 76, 60, 0.1);
            }

            .form-textarea {
                resize: vertical;
                min-height: 100px;
            }

            .form-actions {
                padding: 20px 30px;
                background: #f8f9fa;
                border-top: 1px solid #e9ecef;
                display: flex;
                gap: 12px;
                justify-content: flex-end;
            }

            @media (max-width: 768px) {
                .role-create-container {
                    padding: 15px;
                }
                
                .header-content {
                    flex-direction: column;
                    gap: 15px;
                }
                
                .header-actions {
                    flex-wrap: wrap;
                }
                
                .form-sections {
                    padding: 20px;
                }
                
                .form-row {
                    margin: 0;
                }
                
                .form-group {
                    padding: 0;
                }
                
                .form-actions {
                    padding: 15px 20px;
                    flex-direction: column;
                }
            }