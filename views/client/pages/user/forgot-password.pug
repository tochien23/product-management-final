extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main 
    +alert-success(5000)
    +alert-error(5000) 

    // Auth Section
    section.auth-section.min-vh-100.d-flex.align-items-center.py-5
        .container
            .row.justify-content-center
                .col-lg-5.col-md-7.col-sm-9
                    .auth-card.bg-white.rounded-4.shadow-lg.overflow-hidden
                        // Header with gradient
                        .auth-header.bg-warning.text-dark.text-center.py-5
                            .auth-icon.mb-3
                                i.fas.fa-key.fa-3x.opacity-75
                            h2.auth-title.fw-bold.mb-2 Quên mật khẩu?
                            p.auth-subtitle.mb-0.opacity-75 Đừng lo lắng, chúng tôi sẽ giúp bạn!

                        // Form Body
                        .auth-body.p-5
                            // Instructions
                            .instructions.mb-4.p-4.bg-light.rounded-3.border-start.border-primary.border-4
                                .d-flex.align-items-start
                                    i.fas.fa-info-circle.text-primary.me-3.mt-1
                                    div
                                        h6.fw-bold.mb-2 Hướng dẫn khôi phục mật khẩu:
                                        ol.mb-0.small.text-muted
                                            li Nhập email đã đăng ký tài khoản
                                            li Kiểm tra hộp thư email của bạn
                                            li Nhấp vào liên kết trong email
                                            li Tạo mật khẩu mới

                            form.auth-form(action="/user/password/forgot", method="POST")
                                // Email Field
                                .form-group.mb-4
                                    .form-floating
                                        input.form-control.form-control-lg.border-2(
                                            type="email"
                                            id="email"
                                            name="email"
                                            placeholder="Nhập email đã đăng ký"
                                            required
                                        )
                                        label.text-muted(for="email")
                                            i.fas.fa-envelope.me-2
                                            | Email đã đăng ký
                                    .form-text.text-muted.small
                                        i.fas.fa-shield-alt.me-1
                                        | Chúng tôi sẽ gửi liên kết khôi phục đến email này

                                // Submit Button
                                .form-group.mb-4
                                    button.btn.btn-warning.btn-lg.w-100.fw-bold.py-3.rounded-3.text-dark(type="submit")
                                        i.fas.fa-paper-plane.me-2
                                        | Gửi email khôi phục

                                // Divider
                                .divider.my-4
                                    .divider-line
                                    .divider-text.bg-white.px-3.text-muted hoặc
                                    .divider-line

                                // Back to login
                                .text-center
                                    span.text-muted Nhớ lại mật khẩu? 
                                    a.login-link.text-decoration-none.fw-bold(href="/user/login") Đăng nhập ngay

                        // Help Section
                        .auth-footer.bg-light.p-4.text-center
                            .help-section
                                h6.fw-bold.mb-2.text-muted
                                    i.fas.fa-question-circle.me-2
                                    | Cần hỗ trợ?
                                p.small.text-muted.mb-3 Nếu bạn không nhận được email, hãy liên hệ với chúng tôi
                                .contact-options.d-flex.justify-content-center.gap-3
                                    a.btn.btn-outline-primary.btn-sm(href="tel:0123456789")
                                        i.fas.fa-phone.me-1
                                        | Hotline
                                    a.btn.btn-outline-secondary.btn-sm(href="mailto:support@shop.com")
                                        i.fas.fa-envelope.me-1
                                        | Email
